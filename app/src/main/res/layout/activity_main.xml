<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:orientation="vertical"
	android:background="#FFF7DA"
	tools:context = ".MainActivity">
	
	<!-- Stay category -->
	<FrameLayout
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content">
		
		<TextView
			android:id="@+id/stay"
			android:layout_width = "wrap_content"
			android:text="Where to stay?"
			android:layout_height = "wrap_content" />
	
	</FrameLayout>
	
	<!-- Eat category -->
	<FrameLayout
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content">
		
		<TextView
			android:id="@+id/eat"
			android:layout_width = "wrap_content"
			android:text="Where to eat?"
			android:layout_height = "wrap_content" />
	
	</FrameLayout>
	
	<!-- Drink category -->
	<FrameLayout
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content">
		
		<TextView
			android:id="@+id/drink"
			android:layout_width = "wrap_content"
			android:text="Where to drink?"
			android:layout_height = "wrap_content" />
	
	</FrameLayout>
	
	<!-- Do category -->
	<FrameLayout
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content">
		
		<TextView
			android:id="@+id/todo"
			android:layout_width = "wrap_content"
			android:text="What to do?"
			android:layout_height = "wrap_content" />
	
	</FrameLayout>
	
	<!-- Shop category -->
	<FrameLayout
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content">
		
		<TextView
			android:id="@+id/shop"
			android:layout_width = "wrap_content"
			android:text="Where to shop?"
			android:layout_height = "wrap_content" />
	
	</FrameLayout>

</LinearLayout>